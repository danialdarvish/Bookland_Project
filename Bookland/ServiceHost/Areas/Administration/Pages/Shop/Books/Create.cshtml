@page
@model CreateModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "ایجاد کتاب جدید";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ایجاد کتاب جدید</h3>
            </div>
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Name" class="control-label">نام</label>
                                <input type="text" class="form-control" asp-for="Command.Name" onchange="makeSlug('Name', 'Slug')">
                                <span asp-validation-for="Command.Name" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                                <input type="text" class="form-control" asp-for="Command.Slug">
                                <span asp-validation-for="Command.Slug" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.CategoryId" class="control-label">دسته بندی</label>
                                <select asp-for="Command.CategoryId" class="select2" multiple data-placeholder="دسته بندی ها را انتخاب کنید..."
                                        asp-items="Model.Categories">
                                </select>
                                <span asp-validation-for="Command.CategoryId" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.AuthorId" class="control-label">نویسنده</label>
                                <select asp-for="Command.AuthorId" class="select2" data-placeholder="نویسنده را انتخاب کنید..."
                                        asp-items="Model.Authors">
                                    <option value="0">انتخاب کنید</option>
                                </select>
                                <span asp-validation-for="Command.AuthorId" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="Command.Description" class="control-label">توضیحات</label>
                                <textarea class="form-control" id="BodyContent" asp-for="Command.Description"></textarea>
                                <span asp-validation-for="Command.Description" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Format" class="control-label">فرمت</label>
                                <input type="text" class="form-control" asp-for="Command.Format">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.PageCount" class="control-label">تعداد صفحه</label>
                                <input type="text" class="form-control" asp-for="Command.PageCount">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Publisher" class="control-label">انتشارات</label>
                                <input type="text" class="form-control" asp-for="Command.Publisher">
                                <span asp-validation-for="Command.Publisher" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Language" class="control-label">زبان</label>
                                <input type="text" class="form-control" asp-for="Command.Language">
                                <span asp-validation-for="Command.Language" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Isbn" class="control-label">ISBN</label>
                                <input type="text" class="form-control" asp-for="Command.Isbn">
                                <span asp-validation-for="Command.Isbn" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.PublishDate" class="control-label">تاریخ انتشار</label>
                                <input class="form-control persianDateInput" asp-for="Command.PublishDate">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.Picture" class="control-label">عکس</label>
                                <input type="file" class="form-control" asp-for="Command.Picture" accept="image/*">
                                <span asp-validation-for="Command.Picture" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.PictureAlt" class="control-label">Alt</label>
                                <input type="text" class="form-control" asp-for="Command.PictureAlt">
                                <span asp-validation-for="Command.PictureAlt" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.PictureTitle" class="control-label">عنوان</label>
                                <input type="text" class="form-control" asp-for="Command.PictureTitle">
                                <span asp-validation-for="Command.PictureTitle" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.Keywords" class="control-label">کلمات کلیدی</label>
                                <input type="text" class="form-control" asp-for="Command.Keywords">
                                <span asp-validation-for="Command.Keywords" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                                <textarea class="form-control autogrow" asp-for="Command.MetaDescription"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="Command.MetaDescription" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-b-5">ایجاد</button>
                    <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="~/AdminTheme/assets/jquery-multi-select/multi-select.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTheme/assets/select2/select2.css" rel="stylesheet" type="text/css" />
}

@section Scripts
{
    <script src="~/AdminTheme/assets/select2/select2.min.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {

            jQuery(".select2").select2({
                width: '100%'
            });
        });
    </script>
}

