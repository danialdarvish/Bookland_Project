@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["Title"] = "ورود و ثبت نام";
}


<div class="tg-innerbanner tg-haslayout tg-parallax tg-bginnerbanner" data-z-index="-100" data-appear-top-offset="600" data-parallax="scroll" data-image-src="/Theme/assets/images/parallax/bgparallax-07.jpg">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="tg-innerbannercontent">
                    <h1>ورود و ثبت نام</h1>
                    <ol class="tg-breadcrumb">
                        <li><a asp-page="/Index">خانه</a></li>
                        <li class="tg-active">ورود و ثبت نام</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mainten-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page">
                    <div class="content-page">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @Model.LoginMessage
                                    </div>
                                }
                                <form method="post" asp-page-handler="Login">
                                    <div class="form-group">
                                        <h4 class="title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="مثال: danial_darvish">
                                            </div>
                                            <div class="col-12">
                                                <label>کلمه عبور</label>
                                                <input type="password" name="password" placeholder="********">
                                            </div>
                                            @*<div class="col-sm-6">
                                                    <div class="check-box d-inline-block ml-0 ml-md-2">
                                                        <input type="checkbox" id="remember_me">
                                                        <label for="remember_me">Remember me</label>
                                                    </div>
                                                </div>*@
                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link"> کلمه عبور خود را فراموش کردید؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="btn btn-success">ورود</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @Model.RegisterMessage
                                    </div>
                                }
                                <form method="post" asp-page-handler="Register">

                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>

                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام و نام خانوادگی</label>
                                                <input type="text" name="fullname" placeholder="مثال: دانیال درویش">
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="مثال: danial_darvish">
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>تلفن همراه</label>
                                                <input type="number" name="mobile" placeholder="مثال: 09213781973">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>کلمه عبور</label>
                                                <input type="password" name="password" placeholder="مثال: ********">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>تکرار کلمه عبور</label>
                                                <input type="password" name="rePassword" placeholder="مثال: ********">
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


